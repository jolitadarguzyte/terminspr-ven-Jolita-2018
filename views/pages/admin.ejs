            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/admin">City Cykler Admin</a>
        </div>
        <div class="collapse navbar-collapse" id="nav-bar">
          <ul class="nav navbar-nav">

            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="glyphicon glyphicon-th-list"></span> &nbsp; Produkter
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/udstyrAdmin"> Administrering af udstyr</a>
                </li>
                <li>
                  <a href="/opretprodukt">Opret Produkt</a>
                </li>
              </ul>
            </li>


            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="glyphicon glyphicon-th-list"></span> &nbsp; Generel info
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/nyhedAdmin"> Administrering af Nyheder </a>
                </li>
              </ul>
            </li>



            <li>
              <a href="/kontakt">
                <span class="glyphicon glyphicon-envelope"></span> &nbsp; Bestillinger</a>
            </li>
          </ul>


          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logud
                <span class="caret"></span>
              </a>
              <ul id="nav_login" class="dropdown-menu login-nav-dropdown">
                <li>
                  <div class="container-fluid dropdown-header">
                    <div class="row">
                      <div class="col-xs-12 col-md-8">
                        <strong>Logoud</strong>
                      </div>
                      <div class="col-xs-12 col-md-8">&nbsp;</div>
                      <div class="col-xs-12">
                        <a href="logud" name="" class="btn">
                          <a href="/logout">Log Ud</a>
                        </a>
                      </div>
                      <div class="col-xs-12">
                        <form class="form-horizontal loginForm">
                          <fieldset>
                            &nbsp;
                          </fieldset>
                        </form>

